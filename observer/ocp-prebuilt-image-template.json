                              "value": "${SDI_NODE_SELECTOR}"
                           },
                           {
                              "name": "SOURCE_IMAGE_PULL_SPEC",
                              "value": "${IMAGE_PULL_SPEC}"
                           }
                        ],
                        "image": " ",
                        "name": "sdi-observer",
                        "resources": {
                           "limits": {
                              "cpu": "2000m",
                              "memory": "2Gi"
                           },
                           "requests": {
                              "cpu": "400m",
                              "memory": "500Mi"
                           }
                        }
                     }
                  ],
                  "restartPolicy": "Always",
                  "serviceAccount": "sdi-observer",
                  "serviceAccountName": "sdi-observer"
               }
            },
            "triggers": [
               {
                  "type": "ConfigChange"
               },
               {
                  "imageChangeParams": {
