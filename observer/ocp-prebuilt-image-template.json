                              "value": "${FORCE_REDEPLOY}"
                           },
                           {
                              "name": "REPLACE_SECRETS",
                              "value": "${REPLACE_SECRETS}"
                           },
                           {
                              "name": "OCP_MINOR_RELEASE",
                              "value": "${OCP_MINOR_RELEASE}"
                           },
                           {
                              "name": "SDI_NAMESPACE",
                              "value": "${SDI_NAMESPACE}"
